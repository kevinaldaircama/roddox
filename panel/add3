<body>
  <div class="formulario">
    <h2>Registrar Persona + Link de Descarga</h2>
    <input type="text" id="dni" placeholder="DNI" required />
    <input type="text" id="nombres" placeholder="Nombres" required />
    <input type="text" id="apellidoPaterno" placeholder="Apellido Paterno" required />
    <input type="text" id="apellidoMaterno" placeholder="Apellido Materno" required />
    <input type="text" id="link" placeholder="Enlace de descarga (PDF u otro)" required />
    <button onclick="guardarDatos()">Guardar</button>
  </div>

  <script>
    const firebaseConfig = {
      apiKey: "AIzaSyDFxkNJCVxwddZFsqPeXSdeYe87ExEdhQk",
    authDomain: "roddox-27e1b.firebaseapp.com",
    databaseURL: "https://roddox-27e1b-default-rtdb.firebaseio.com",
    projectId: "roddox-27e1b",
    storageBucket: "roddox-27e1b.firebasestorage.app",
    messagingSenderId: "108259944325",
    appId: "1:108259944325:web:4ffd0c6e7815822eb1c6ec",
    measurementId: "G-MBQ5X9PLF8"
  };

    firebase.initializeApp(firebaseConfig);
    const db = firebase.firestore();

    async function guardarDatos() {
      const dni = document.getElementById("dni").value.trim();
      const nombres = document.getElementById("nombres").value.trim();
      const apellidoPaterno = document.getElementById("apellidoPaterno").value.trim();
      const apellidoMaterno = document.getElementById("apellidoMaterno").value.trim();
      const link = document.getElementById("link").value.trim();

      if (!dni || !nombres || !apellidoPaterno || !apellidoMaterno || !link) {
        alert("Todos los campos son obligatorios.");
        return;
      }

      try {
        await db.collection("info").doc(dni).set({
          nombres,
          apellidoPaterno,
          apellidoMaterno,
          link
        });

        alert("✅ Datos guardados correctamente en 'busqueda'");
        document.querySelectorAll("input").forEach(i => i.value = "");
      } catch (error) {
        console.error("Error al guardar:", error);
        alert("❌ Error al guardar los datos.");
      }
    }
  </script>
